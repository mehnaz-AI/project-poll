<body>
    <div class="container">
        <h1>Project Discussion</h1>
        <p>We are having very few days to start working on our project. Please take it seriously and make time for it. Let's work together. Regards, your teammate.</p>
        <div class="poll">
            <h2>Are you ready to work on the same project or make a new one?</h2>
            <label>
                <input type="radio" name="project" value="same_project">
                Same Project
            </label>
            <label>
                <input type="radio" name="project" value="new_project">
                New Project
            </label>
            <label>
                <input type="radio" name="project" value="new_idea">
                Write Down Your Idea
                <textarea name="idea" rows="4" cols="50"></textarea>
            </label>
        </div>
        <div class="poll">
            <h2>When are you available to work on the project?</h2>
            <label>
                <input type="radio" name="availability" value="monday_tuesday">
                Monday and Tuesday
            </label>
            <label>
                <input type="radio" name="availability" value="wednesday_thursday">
                Wednesday and Thursday
            </label>
            <label>
                <input type="radio" name="availability" value="anytime">
                Anytime
            </label>
        </div>
        <button class="submit-btn" onclick="submitPoll()">Submit</button>
    </div>

    <script>
        function submitPoll() {
            const project = document.querySelector('input[name="project"]:checked') ? document.querySelector('input[name="project"]:checked').value : null;
            const idea = document.querySelector('textarea[name="idea"]').value;
            const availability = document.querySelector('input[name="availability"]:checked') ? document.querySelector('input[name="availability"]:checked').value : null;

            if (!project) {
                alert('Please select an option for the first poll.');
                return;
            }

            if (project === 'new_idea' && !idea) {
                alert('Please write down your idea.');
                return;
            }

            if (!availability) {
                alert('Please select an option for the second poll.');
                return;
            }

            alert('Poll submitted successfully!\nProject: ' + project + (idea ? '\nIdea: ' + idea : '') + '\nAvailability: ' + availability);
        }
    </script>
</body>
</html>
